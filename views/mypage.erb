<div class="alert alert-dark">
  ようこそ、<%= @name %>さん
</div>
<div style="float: left;">
  <div class="btn-group btn-group-toggle" data-toggle="buttons">
    <label id="gridbutton" class="btn btn-outline-primary">
      <input type="radio" name="listmode" value="grid" autocomplete="off" checked><span class="oi oi-grid-two-up"></span>
    </label>
    <label id="listbutton" class="btn btn-outline-primary">
      <input type="radio" name="listmode" value="list" autocomplete="off"><span class="oi oi-list"></span>
    </label>
  </div>
</div>
<div style="float: right;">
  <button type="button" class="btn btn-success" onclick="location.href='/book/add'" style="margin-bottom: 1rem;">
    ＋ 追加
  </button>
</div>
<h2 style="text-align: center;">所有書籍</h2>
<div class="input-group mb-2">
  <div class="input-group-prepend">
    <span class="input-group-text">タイトル検索</span>
  </div>
  <input type="text" class="form-control" id="search">
</div>
<ul id="owngrid" style="list-style: none;"></ul>
<table id="ownlist" class="table"></table>

<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center" id="pagenav">
  </ul>
</nav>

<script src="/js/mypage.js"></script>