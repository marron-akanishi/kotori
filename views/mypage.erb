<div class="alert alert-dark">
  ようこそ、<%= @name %>さん
</div>
<div style="float: left;">
  <div class="btn-group btn-group-toggle" data-toggle="buttons">
    <label id="gridbutton" class="btn btn-outline-primary">
      <input type="radio" name="listmode" value="GRID" autocomplete="off" checked><span class="oi oi-grid-two-up"></span>
    </label>
    <label id="listbutton" class="btn btn-outline-primary">
      <input type="radio" name="listmode" value="LIST" autocomplete="off"><span class="oi oi-list"></span>
    </label>
  </div>
</div>
<div style="float: right;">
  <button type="button" class="btn btn-success" onclick="location.href='/book/add/title'" style="margin-bottom: 1rem;">
    ＋ 追加
  </button>
</div>
<h2 style="text-align: center;">所有書籍</h2>
<div class="input-group mb-2">
  <div class="input-group-prepend">
    <span class="input-group-text">検索</span>
  </div>
  <input type="text" class="form-control" id="search">
  <div class="input-group-append">
    <span class="input-group-text" id="listcount"></span>
  </div>
</div>
<div class="d-flex justify-content-end mb-2">
  <div class="form-inline mr-2">
    <label for="limit-sel">表示件数：</label>
    <select id="limit-sel" class="form-control" onchange="">
      <option value="25" selected>25</option>
      <option value="50">50</option>
      <option value="100">100</option>
    </select>
  </div>
  <div class="form-inline">
    <label for="sort-sel">表示順：</label>
    <select id="sort-sel" class="form-control" onchange="setSort(this)">
      <option value="created_at,desc" selected>所有登録日(降順)</option>
      <option value="created_at,asc">所有登録日(昇順)</option>
      <option value="title,desc">タイトル(降順)</option>
      <option value="title,asc">タイトル(昇順)</option>
    </select>
  </div>
</div>
<div id="loading-gif" style="text-align: center;">
<img src="/images/loading.gif" />
</div>
<div id="owngrid" class="row justify-content-around"></div>
<table id="ownlist" class="table"></table>

<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center" id="pagenav">
  </ul>
</nav>

<script src="/js/mypage.js?ver=<%= $version %>"></script>